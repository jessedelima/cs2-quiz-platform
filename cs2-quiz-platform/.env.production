# Configurações do Servidor
PORT=3000
NODE_ENV=production

# Steam API
STEAM_API_KEY=sua_steam_api_key_aqui
STEAM_BOT_USERNAME=seu_bot_username
STEAM_BOT_PASSWORD=sua_bot_password
STEAM_BOT_SHARED_SECRET=seu_shared_secret
STEAM_BOT_IDENTITY_SECRET=seu_identity_secret

# Sessão
SESSION_SECRET=chave_secreta_aleatoria_para_producao

# Banco de Dados
# Para produção, considere usar um caminho absoluto ou um serviço de banco de dados
DATABASE_PATH=/caminho/absoluto/para/database/cs2quiz.db

# URLs
# Substitua pelo seu domínio real em produção
BASE_URL=https://seu-dominio.com
FRONTEND_URL=https://seu-dominio.com

# Configurações do Quiz
MAX_PLAYERS_PER_LOBBY=10
QUIZ_TIME_LIMIT=30
QUESTIONS_PER_QUIZ=10
PLATFORM_FEE_PERCENTAGE=5

# Configurações de Skins
MIN_SKIN_VALUE=1.00
SKIN_PRICE_API=https://api.csgofloat.com/v1/market/items

# Configurações de Segurança para Produção
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Configurações de Logging
LOG_LEVEL=error
LOG_FILE=/caminho/para/logs/cs2quiz.log

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Configurações de Cache
CACHE_TTL=3600